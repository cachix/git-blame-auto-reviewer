{
  "name": "git-blame-auto-reviewer",
  "version": "1.0.0",
  "description": "GitHub Action to automatically request reviews from code authors based on git blame",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "package": "ncc build lib/index.js -o dist --source-map --license licenses.txt",
    "prepare": "npm run build && npm run package",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "github",
    "actions",
    "git",
    "blame",
    "review",
    "automation",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.0",
    "typescript": "^4.9.0"
  }
}
